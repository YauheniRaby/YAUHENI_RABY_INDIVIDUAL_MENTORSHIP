{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss MM.dd.yyyy ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*",
  "AppConfiguration": {
    "MinCountDaysForecast": 0,
    "MaxCountDaysForecast": 5,
    "IsDebugMode": true,
    "RequestTimeout": 1000000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=weatherdb;Trusted_Connection=True;"
  },
  "WetherApiConfiguration": {
    "Key": "3fe39edadae3ae57d133a80598d5b120",
    "CurrentWeatherUrl": "https://api.openweathermap.org/data/2.5/weather?q={0}&units=metric&appid=",
    "ForecastWeatherUrl": "https://api.openweathermap.org/data/2.5/forecast?lat={0}&lon={1}&cnt={2}&units=metric&appid=",
    "CoordinatesUrl": "http://api.openweathermap.org/geo/1.0/direct?q={0}&appid=",
    "CountPointsInDay": 8
  },
  "BackgroundJobConfiguration": {
    "CitiesOptions": [
      {
        "CityName": "Minsk",
        "Timeout": 40
      },
      {
        "CityName": "Kiev",
        "Timeout": 30
      },
      {
        "CityName": "Best",
        "Timeout": 15
      },
      {
        "CityName": "Berlin",
        "Timeout": 40
      }
    ]
  }
}
