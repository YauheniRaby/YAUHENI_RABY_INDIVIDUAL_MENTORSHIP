{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss MM.dd.yyyy ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*",
  "AppConfiguration": {
    "MinCountDaysForecast": 0,
    "MaxCountDaysForecast": 5,
    "IsDebugMode": true,
    "RequestTimeout": 1000000
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=weatherdb;Trusted_Connection=True;"
  },
  "BackgroundJobConfiguration": {
    "CitiesOptions": [
      {
        "CityName": "Minsk",
        "Timeout": 10
      },
      {
        "CityName": "Paris",
        "Timeout": 30
      },
      {
        "CityName": "Berlin",
        "Timeout": 10
      },
      {
        "CityName": "Kiev",
        "Timeout": 25
      },
      {
        "CityName": "Moscow",
        "Timeout": 40
      }
    ]
  }
}
